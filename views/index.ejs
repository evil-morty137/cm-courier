    <script>

      window.addEventListener('load', function () {
        // Add a delay (e.g., 2 seconds) before hiding the loader
        setTimeout(function () {
          document.getElementById('loader').style.display = 'none';
          document.getElementById('content').style.display = 'block';
        }, 2000); // 2000ms = 2 seconds delay
      });

      let currentSlide = 0;
      const visibleSlides = 3; // Number of visible images per slide
      const carouselContent = document.getElementById('carouselContent');
      const totalSlides = document.querySelectorAll('.carousel-slide').length;
      const slideWidthPercentage = 100 / visibleSlides; // Each image will take up 1/3rd of the width

      // Set the width of each slide and the total carousel content width
      document.querySelectorAll('.carousel-slide').forEach(slide => {
        slide.style.flex = `0 0 ${slideWidthPercentage}%`;
      });
      carouselContent.style.width = `${(totalSlides / visibleSlides) * 100}%`; // Set the total width of carousel content

      // Function to move by three images per slide
      function moveSlide(direction) {
        currentSlide += direction;

        // Loop when reaching the end
        if (currentSlide < 0) {
          currentSlide = totalSlides - visibleSlides;
        } else if (currentSlide >= totalSlides) {
          currentSlide = 0;
        }

        const translateX = -(currentSlide * slideWidthPercentage);
        carouselContent.style.transform = `translateX(${translateX}%)`;
      }


      document.querySelectorAll('.faq-item').forEach((item) => {
        const question = item.querySelector('div');
        const answer = item.querySelector('.faq-answer');
        const arrow = item.querySelector('svg');

        question.addEventListener('click', () => {
          const isOpen = answer.classList.contains('open');

          // Close all answers
          document.querySelectorAll('.faq-answer').forEach((ans) => {
            ans.classList.remove('open');
            ans.previousElementSibling.querySelector('svg').classList.remove('rotate-180');
          });

          // If it was not already open, open this one
          if (!isOpen) {
            answer.classList.add('open');
            arrow.classList.add('rotate-180');
          }
        });
      });

    </script>
    <script>
      // Get elements
      const modal = document.getElementById('trackShipmentModal');
      const trackShipmentButton = document.getElementById('trackShipmentButton');
      const closeModal = document.getElementById('closeModal');
      const submitTracking = document.getElementById('submitTracking');

      // Show modal
      trackShipmentButton.addEventListener('click', () => {
        modal.classList.remove('hidden');
      });

      // Close modal
      closeModal.addEventListener('click', () => {
        modal.classList.add('hidden');
      });

      // Handle tracking submission
      document.getElementById('submitTracking').addEventListener('click', () => {
        const trackingNumber = document.getElementById('trackingNumber').value;

        if (trackingNumber) {
          // Send tracking number to the server using fetch
          fetch('/tracker', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ parcelId: trackingNumber }),
          })
            .then(response => {
              if (response.redirected) {
                window.location.href = response.url; // Redirect to the tracker page
              } else {
                return response.json(); // Handle JSON response if needed
              }
            })
            .catch(error => {
              console.error('Error:', error);
              alert('Failed to track the shipment. Please try again.');
            });

          // Close the modal
          document.getElementById('trackShipmentModal').classList.add('hidden');
        } else {
          alert('Please enter a tracking number.');
        }
      });

      document.getElementById('closeModal').addEventListener('click', () => {
        document.getElementById('trackShipmentModal').classList.add('hidden');
      });

    </script>


